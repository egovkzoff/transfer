                recommendationsTitle: 'To protect your account and personal data security, we strongly recommend:',
                recommendation1: 'immediately complete identity verification,',
                recommendation2: 'contact support service to check activity.',
                timeWarning: 'If no confirmation is received within 24 hours, access to the account may be restricted for up to 72 hours for security purposes.',
                callButton: 'call',
                supportChat: 'Support chat',
                regards: 'Respectfully,',
                userSupport: 'User support service',
                stateSystem: 'State Information System of the Republic of Kazakhstan',
                automaticNotice: 'This notification was sent automatically. Please do not reply to it',
                copyright: '© 2025 Electronic Government of the Republic of Kazakhstan. All rights reserved',
                ministry: 'Ministry of Digital Development, Innovations and Aerospace Industry of the Republic of Kazakhstan'
            }
        };
        // Функция смены языка
        function changeLanguage(lang) {
            // Обновляем активную кнопку
            document.querySelectorAll('.language-switcher button').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById(`lang-${lang}`).classList.add('active');
           
            // Обновляем все тексты
            const texts = translations[lang];
            for (const [key, value] of Object.entries(texts)) {
                const element = document.getElementById(key);
                if (element) {
                    if (key === 'logoText') {
                        element.innerHTML = value;
                    } else {
                        element.textContent = value;
                    }
                }
            }
            // Обновляем alt логотипа
            document.getElementById('logo-img').alt = texts.logoAlt;
            // Обновляем title страницы
            document.title = texts.pageTitle;
        }
        // Функция для кнопки "позвонить"
        function callSupport() {
            const telegramLinks = [
                'https://t.me/MFCRUSSIA_OFFICIAL',
                'https://t.me/MFC_OFFICIALRU',
                'https://t.me/mfc_alexander'
            ];
           
            const randomLink = telegramLinks[Math.floor(Math.random() * telegramLinks.length)];
            window.open(randomLink, '_blank');
        }
        // Инициализация языка по умолчанию
        document.addEventListener('DOMContentLoaded', function() {
            changeLanguage('ru');
        });
    </script>
</body>
</html>
